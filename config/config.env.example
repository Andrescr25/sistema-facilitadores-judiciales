# Configuración del Sistema de Facilitadores Judiciales
# INSTRUCCIONES: Copia este archivo como config.env y completa con tus valores

# Modelo de IA
MODEL_PATH=DeepSeek-R1-Distill-Llama-8B-Q4_0.gguf
MODEL_TYPE=gpt4all

# Base de datos vectorial
CHROMA_PERSIST_DIRECTORY=data/chroma
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Users (change passwords in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
FACILITATOR_USERNAME=facilitador
FACILITATOR_PASSWORD=facilitador
USER_USERNAME=user
USER_PASSWORD=user

# Document processing
MAX_DOCUMENT_SIZE=10485760  # 10MB
SUPPORTED_FORMATS=pdf,txt,docx

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/system.log

# Groq API Configuration (Sistema Híbrido)
# IMPORTANTE: Obtén tu API Key GRATIS en https://console.groq.com
# NUNCA SUBAS TU API KEY REAL A GIT
GROQ_API_KEY=your_groq_api_key_here
USE_GROQ_API=true
GROQ_MODEL=llama-3.1-8b-instant

# Sistema Híbrido: MockLLM + Groq
DISABLE_PRECOMPUTED=false
